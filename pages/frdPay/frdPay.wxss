.frdpay{
  width: 100%;
  min-height: 100vh;
  padding: 10rpx 0;
  text-align: center;
  background-color: #efefef;
}
.frdpay-title{
	font-size: 26rpx;
  line-height: 45rpx;
  padding-left: 40rpx;
  text-align: left;
  font-family: AdobeHeitiStd-Regular;
	font-weight: normal;
	font-stretch: normal;
	color: #333333;
}
.frdpay-content{
  margin: 0 auto;
  width: 723rpx;
	/* height: 725rpx; */
	background-color: #f8faff;
	box-shadow: 1rpx 18rpx 29rpx 0rpx 
		rgba(12, 3, 6, 0.03);
	border-radius: 8rpx;
}
.frdpay-content-imgwrap{
  width: 315rpx;
  height: 255rpx;
  position: relative;
  margin: 0 auto;
}
image{
  width: 100%;
  height: 100%;
}
.frdpay-content-btn{
  margin: 10rpx auto;
  width: 604rpx;
  border-radius: 8rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  text-align: center;
  margin: 0 auto 50rpx;
  background-color: #ffe018;
  opacity: 0.8;
}
.frdpay-content-money{
  font-size: 62rpx;
  line-height: 62rpx;
  margin-bottom: 20rpx;
  font-family: MicrosoftYaHei-Bold;
	font-weight: normal;
	font-stretch: normal;
  color: #000000;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -95%)
}
.frdpay-content-text{
  margin: 20rpx auto;
  line-height: 40rpx;
  font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #333333;
}
.time{
  padding: 2rpx;
	background-color: #1b1b1b;
  border-radius: 3rpx;
	font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
  color: #ffffff;
  
}
.frdpay-content-who{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
	line-height: 45rpx;
	font-weight: normal;
	font-stretch: normal;
	font-family: MicrosoftYaHei;
	letter-spacing: 0rpx;
	color: #333333;
}
.desc{
  margin-left: 10rpx;
	font-size: 28rpx;
	line-height: 45rpx;
  text-align: left;
  font-family: MicrosoftYaHei;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
}
.desc-content{
	font-size: 24rpx;
  line-height: 45rpx;
  padding-bottom: 27rpx;
  margin-left: 10rpx;
  text-align: left;
  font-family: MicrosoftYaHei;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #666666;
}
.frdpay-foods{
  margin: 20rpx auto 0;
  padding: 30rpx 8rpx;
  width: 723rpx;
  box-sizing: border-box;
	background-color: #f8faff;
	box-shadow: 1rpx 18rpx 29rpx 0rpx 
		rgba(12, 3, 6, 0.03);
	border-radius: 8rpx;
}
.frdpay-foods-title{
	height: 28rpx;
  font-size: 28rpx;
  padding: 15rpx 16rpx;
	line-height: 45rpx;
	letter-spacing: 0rpx;
  border-bottom: 2rpx solid #dcdcdc;
  color: #666666;
  text-align: left;
	font-family: MicrosoftYaHei;
}
.frdpay-foods-list{
  margin: 0 auto;
  width: 660rpx;
	background-color: #ffffff;
	
}
.frdpay-foods-list-item{
  padding: 13rpx 30rpx;
  margin: 30rpx 0;
  box-shadow: -4rpx 10rpx 24rpx 0rpx 
		rgba(137, 137, 137, 0.09);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.frdpay-foods-list-item-info{
  padding-left: 45rpx;
  width: 265rpx;
  text-align: left;
}
.frdpay-foods-list-item-name{
  line-height: 74rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #333333;
  font-family: MicrosoftYaHei;
  width: 265rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.frdpay-foods-list-item-desc{
	font-family: MicrosoftYaHei;
  font-size: 24rpx;
  line-height: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffe018;
}
.frdpay-foods-list-item-desc image{
  width: 21rpx!important;
  height: 21rpx!important;
}
.frdpay-foods-list-item-price{
	font-family: MicrosoftYaHei;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	color: #999999;
}
.frd-foods-list-item-foodpic{
  width: 184rpx;
  height: 126rpx;
}
.gray{
  background-color: gray;
}
